<%- include('../partials/head') %>
  </head>
  <body>
    <%- include('../partials/nav') %>
    <main class="container mx-auto bg-white shadow-lg rounded-lg p-8 mt-10 max-w-xl">
      <h2 class="text-3xl text-red-500 font-bold text-center mb-6">
        hey host! here are your host homes
      </h2>
      <ul class="space-y-4">
        <% registeredHomes.forEach(home => { %>
          <li class="bg-gray-100 p-4 rounded-lg shadow-md hover:shadow-lg transition duration-300">
            <span class="text-lg text-gray-800"><%= home.houseName %></span>
            <span class="text-lg text-gray-800"><%= home.pricePerNight %></span>
            <span class="text-lg text-gray-800"><%= home.Location %></span>
            <span class="text-lg text-gray-800"><%= home.Rating %></span>
            <img src="<%= home.photoUrl %>" alt="house img" class="w-64 h-40 object-cover rounded-lg mt-2">
            <a href="/host/edit-home/<%= home.id%>?editing=true" class="bg-blue-500" >Edit</a>
            <form action="/host/delete-home/<%= home.id %>" method="POST">
            <button class="bg-red-500">Delete</button>
            </form>
          </li>
        <% }) %>
      </ul>
    </main>
  </body>
</html>
